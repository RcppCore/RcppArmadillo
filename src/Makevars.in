## -*- mode: makefile; -*-

## Configure tells us about locations for
## both Rcpp (ie libRcpp.so and Rcpp.h) and 
## Armadillo headers and library via the variables
PKG_CPPFLAGS =		@PKG_CPPFLAGS@ -I.
PKG_LIBS =		@PKG_LIBS@

INCLUDE_DIR =		../inst/include

all: 			$(SHLIB) install

install:
			cp -f *.h $(INCLUDE_DIR)
